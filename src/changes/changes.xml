<document xmlns="http://maven.apache.org/changes/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
	<properties>
		<title>Changes for Worblehat Webapp</title>
		<author email="markus.bonsch@codecentric.de">Markus Bonsch</author>
	</properties>
	<body>
		<release version="0.8" date="2011-04-05" description="First release">
			<action dev="betaworblers" type="update">
				Adding new books.
			</action>
		</release>
		<release version="0.9" date="2011-04-06"
			description="Second Release with much improved functionality">
			<action dev="betaworblers" type="update">
				Borrowing books.
			</action>
		</release>

		<release version="1.0" date="2011-04-06"
			description="Release with much improved functionality">
			<action dev="betaworblers" type="update">
				Return all borrowed books by one member.
			</action>
		</release>

		<release version="1.2.0" date="2018-05-17"
			description="Sprint 2">
			<action dev="Erste Reihe" type="update">
				Show version on home page.
			</action>
			<action dev="Erste Reihe" type="update">
				Show book description in search dialog.
			</action>
		</release>

		<release version="1.3.0" date="2018-05-17"
			description="Sprint 3">
			<action dev="Erste Reihe" type="update">
				Trim inputs.
			</action>
			<action dev="Erste Reihe" type="update">
				Enable ISBN 13.
			</action>
			<action dev="Erste Reihe" type="update">
				New entries for new editions.
			</action>
		</release>
		
		<release version="1.4.0" date="2018-05-18"
			description="Sprint 4">
			<action dev="Erste Reihe" type="update">
				List of borrowed books for a given E-Mail address (sorted by return date).
			</action>
			<action dev="Erste Reihe" type="update">
				Possibility to return single books (via the new borrowed-list).
			</action>
		</release>
	</body>
</document>
